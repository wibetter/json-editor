{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "$core/*": ["./src/core/*"],
      "$components/*": ["./src/components/*"],
      "$renderers/*": ["./src/renderers/*"],
      "$customRenderers/*": ["./src/customRenderers/*"],
      "$plugins/*": ["./src/plugins/*"],
      "$utils/*": ["./src/utils/*"],
      "$assets/*": ["./src/assets/*"],
      "$public/*": ["../../public/*"],
      "$store/*": ["./src/store/*"],
      "$data/*": ["./src/data/*"],
      "$config/*": ["./src/config/*"],
      "$mixins/*": ["./src/mixins/*"],
      "$types/*": ["./src/types/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
